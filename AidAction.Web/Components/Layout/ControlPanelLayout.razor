@inherits LayoutComponentBase
@inject CustomAuthStateProvider AuthStateProvider
@inject IJSRuntime JS
@inject NavigationManager _Nav

@if (checkedAuthTwice && isAuthenticated)
{
    <div class="page controlpanel-content">
