                    <li class="nav-link text-white px-0 py-1">
                        <button class="text-white nav-link py-2 px-3 rounded d-flex align-items-center text-start w-100 flex-fill controlpanel-home-li-n"
                                data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true">
