                </ul>

                <hr class="my-4">

                <!-- Sidebar User Menu -->
                <div class="dropdown">
                    <ul>
                        <li class="nav-link text-white">
                            <button class="btn btn-toggle w-100 text-white align-items-center rounded py-2 px-3 text-start"
                                    data-bs-toggle="collapse" data-bs-target="#user-collapse" aria-expanded="true">
                                <i class="fa-solid fa-user me-2"></i>Admin List
                            </button>
                            <div class="collapse show mt-2" id="user-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal small ps-3">
                                    <li class="mb-2">
                                        <NavLink class="text-white link-light rounded d-block py-2 px-3" href="/ControlPanel/ChangePassword">
                                            <i class="fa-sharp fa-solid fa-gear me-2"></i>Change Password
                                        </NavLink>
                                    </li>
                                    <li>
                                        <button @onclick="Logout" class="btn w-100 text-white align-items-center rounded py-2 px-3 text-start" href="/ControlPanel/">
                                            <i class="fa-sharp fa-solid fa-right-from-bracket me-2"></i>Log out
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content Area -->
            <article class="content flex-grow-1 p-4">
                @Body
            </article>
        </main>

    </div>
}
else if (checkedAuthTwice && !isAuthenticated)
{
    _Nav.NavigateTo("/Auth/Login", true);
}
else
{
    <!-- Optionally show a loading spinner or blank layout while checking -->
    <div>Checking authentication...</div>
}

@code {
    private bool isAuthenticated = false;
    private int checkCount = 0;
    private bool checkedAuthTwice = false;

    protected override async Task OnInitializedAsync()
    {
        // First check
        string token = AuthStateProvider.token;
        if (!string.IsNullOrEmpty(token))
        {
            isAuthenticated = true;
        }
        checkCount++;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (checkCount < 2)
        {
            string userType = await JS.InvokeAsync<string?>("localStorage.getItem", "UserType");
            if (!string.IsNullOrEmpty(userType) && userType == "Admin")
            {
                isAuthenticated = true;
            }
            checkCount++;

            if (checkCount >= 2)
            {
                checkedAuthTwice = true;
                StateHasChanged(); // Force re-render after second check
            }
        }
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "Token");
        await JS.InvokeVoidAsync("localStorage.removeItem", "UserId");
        await JS.InvokeVoidAsync("localStorage.removeItem", "UserType");
        await JS.InvokeVoidAsync("localStorage.removeItem", "FullName");

        await Task.Delay(200);
        await AuthStateProvider.LogoutAsync();
        isAuthenticated = false;

        StateHasChanged();
        _Nav.NavigateTo("/");
    }
}
