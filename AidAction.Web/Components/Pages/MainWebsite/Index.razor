@page "/"
@rendermode InteractiveServer
@layout MainLayout

<!-- Hero Section -->
<section class="hero text-center">
    <div class="container">
        <h2 style="opacity:1;">Your Contribution Makes a Difference</h2>
        <p>Join us in supporting those who need it the most.Your donations help make a lasting impact on the lives of many.</p>
        <NavLink class="btn btn-outline-light me-auto" href="/MainWebsite/DonationCenter">Donate Now </NavLink>
    </div>
</section>

<!-- About the Camp (Fragment Text) -->
<section class="fragment-text text-center">
    <div class="container">
        <h3>About Our Camp</h3>
        <p>This camp is dedicated to providing essential services to people in need. Our mission is to offer a helping hand and provide shelter, food, and education. Every donation helps us get closer to our goal.</p>
    </div>
</section>

<!-- Statistics Section -->
<section class="statistics text-center">
    <div class="container">
        <h3>Donation Statistics</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-4">
                    <h5>Total Donations</h5>
                    <p>$1,200,000</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4">
                    <h5>People Helped</h5>
                    <p>5,000</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4">
                    <h5>Urgent Needs Funded</h5>
                    <p>80%</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Urgent Needs Section -->
