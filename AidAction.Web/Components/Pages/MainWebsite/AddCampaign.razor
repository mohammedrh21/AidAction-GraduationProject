@page "/MainWebsite/AddCampaign"
@layout MainLayout
@inject IMainWebsite _Main
@inject IJSRuntime JS
@inject NavigationManager Navigation

<PageTitle>Campaign Post</PageTitle>

<div class="container py-5">

    <h2 class="fw-bold text-success text-center mb-4">Add New Campaign</h2>



    <EditForm Model="@newCampaign" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <!-- Title Field -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <InputText id="title" class="form-control" @bind-Value="newCampaign.Title" />
        </div>

        <!-- Description Field -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <InputTextArea id="description" class="form-control" @bind-Value="newCampaign.Description" />
        </div>

        <!-- Image File Field -->
        <div class="mb-3">
            <label for="imageFile" class="form-label">Select Image File</label>
            <InputFile id="imageFile" class="form-control" OnChange="HandleFileSelected" />
        </div>

        <!-- Target Amount Field -->
        <div class="mb-3">
            <label for="targetAmount" class="form-label">Target Amount</label>
            <InputNumber id="targetAmount" class="form-control" @bind-Value="newCampaign.TargetAmount" />
        </div>

        <button type="submit" class="btn btn-success px-4 me-5">Submit</button>
        <NavLink class="btn btn-primary px-4 me-2" href="/MainWebsite/FundraiserCampaigns">Back</NavLink>
    </EditForm>
</div>

